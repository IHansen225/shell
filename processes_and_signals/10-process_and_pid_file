#!/usr/bin/env bash
#Multiple traps
echo $$ > /var/run/myscript.pid
trap "echo 'I hate the kill command'" SIGTERM
trap "echo 'Y U no love me?!'" SIGINT
trap "" SIGQUIT
trap "rm /var/run/myscript.pid" SIGTERM
trap "rm /var/run/myscript.pid" SIGQUIT
while true
do
    echo "To infinity and beyond"
done
